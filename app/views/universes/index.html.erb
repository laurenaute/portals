<div class="move-background">
  <div class="container h-screen">
  <h1 class="title-universe">Universes</h1>
  <div class="container-universe">


     <%= link_to universe_path(@universes[0]) do %>
        <div class="card-uni card-1">
          <div class="card-content">
            <div class="title-theme">Sci-Fi</div>
          </div>
        </div>
      <% end %>
      <%= link_to universe_path(@universes[1]) do %>
        <div class="card-uni card-2">
          <div class="card-content">
            <div class="title-theme">Fantasy</div>
          </div>
        </div>
      <% end %>
      <%= link_to universe_path(@universes[2]) do %>
        <div class="card-uni card-3">
          <div class="card-content text-decoration:none">
            <div class="title-theme text-center">Post-Apocalyptic</div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div id="parent">
  <div class="dynBG">
    <div class="bg1"></div>
    <div class="bg2"></div>
    <div class="bg3"></div>
  </div>
</div>
