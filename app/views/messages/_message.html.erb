<div class="chat-message">
  <div class="chat-message-role">
    <p class="me-3"><strong>
      <% case message.role %>
        <% when "user" %>
          <%= message.user.username %>
        <% when "assistant" %>
          Gamemaster
        <% end %>
    </strong></p>
  </div>
  <div class="chat-message-content">
    <p style="white-space: pre-line;"><%= message.content %></p>
  </div>
</div>
