<div class="adventure-play h-screen" data-controller="adventure-subscription" data-adventure-subscription-adventure-id-value="<%= @adventure.id %>">
  <div class="container p-5">
    <h1 class="mb-4">Play your adventure</h1>
    <div class="chat-content" data-adventure-subscription-target="messages">
      <% @messages.each do |message| %>
        <%= render "messages/message", message: message %>
      <% end %>
    </div>
    <div class="chat-input mt-3">
      <%= simple_form_for [@adventure, @message], wrapper: :inline_form, html: { data: { action: "turbo:submit-end->adventure-subscription#resetForm" }, class: 'chat-form' } do |f| %>
          <%= f.input :content, label: false, placeholder: "Number of the action or simply write: I want to ...", wrapper_html: {class: "chat-form-input"}%>
          <%= f.submit "Send", class: "btn-play ", wrapper_html: {class: "chat-form-submit"}%>
      <% end %>
    </div>
  </div>
</div>
